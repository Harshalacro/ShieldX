{
    "manifest_version": 3,
    "name": "ShieldX - AI Security Scanner",
    "version": "1.0",
    "description": "Real-time AI fraud and phishing detection for your browser.",
    "permissions": [
        "activeTab",
        "storage",
        "notifications",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}